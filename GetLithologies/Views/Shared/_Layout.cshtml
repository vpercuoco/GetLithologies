<!DOCTYPE html>

<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>


    <link href="~/css/bootstrap.min.css" rel="stylesheet" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="#">DescriptionFinder 1000</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-item nav-link active" asp-controller="Home" asp-action="Index">Get Descriptions by TextID <span class="sr-only">(current)</span></a>
                    <a class="nav-item nav-link active" asp-controller="Home" asp-action="APIView">API View <span class="sr-only">(current)</span></a>

                    <a class="nav-item nav-link" href="#">Disabled Link</a>
                    <a class="nav-item nav-link disabled" href="#">Disabled Link</a>
                </div>
            </div>
        </nav>
    </header>
    <div>
        @RenderBody()
    </div>

    <div>
        <script src="~/node_modules/jquery/dist/jquery.min.js"></script>
        <!-- <script src="~/node_modules/bootstrap/dist/js/bootstrap.min.js"></script>   Bootstrap was failing on dropdowns because of double-referencing bootstrap here-->
        <script src="~/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    </div>

    @RenderSection("Scripts", required: false)
</body>


</html>
